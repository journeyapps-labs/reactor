{
  "name": "reactor",
  "main": "index.js",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx}\"",
    "clean": "pnpm -r clean && tsc --build --clean && rm -rf modules/*/dist && rm -rf libs/*/dist && rm -rf modules/*/dist-module",
    "build": "pnpm build:builder && pnpm build:ts && pnpm build:modules",
    "build:prod": "NODE_ENV=production NODE_OPTIONS=--max-old-space-size=4096 pnpm build",
    "build:ts": "./node_modules/.bin/tsc --build",
    "build:builder": "pnpm run --filter '@journeyapps-labs/lib-reactor-builder' build",
    "build:modules": "pnpm run -r build:module",
    "release": "pnpm build:prod && pnpm changeset publish",
    "watch": "concurrently 'pnpm watch:ts' 'pnpm watch:modules'",
    "watch:ts": "pnpm build:ts --watch",
    "watch:modules": "pnpm -r --parallel watch:module",
    "ncu": "ncu -u && pnpm recursive exec -- ncu -u && ./scripts/update-overrides.js",
    "test": "pnpm run -r test"
  },
  "pnpm": {
    "neverBuiltDependencies": [
      "node-sass"
    ],
    "peerDependencyRules": {
      "allowAny": [
        "react",
        "react-dom"
      ],
      "ignoreMissing": [
        "fp-ts"
      ]
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "concurrently": "9.2.0",
    "env-cmd": "^10.1.0",
    "glob": "^11.0.3",
    "husky": "9.1.7",
    "js-yaml": "^4.1.0",
    "npm-check-updates": "^18.0.2",
    "patch-package": "^8.0.0",
    "prettier": "3.6.2",
    "typescript": "^5.8.3"
  }
}